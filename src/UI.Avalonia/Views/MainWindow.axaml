<Window
    x:Class="UI.Avalonia.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:blazor="clr-namespace:UI.Blazor.Components;assembly=UI.Blazor"
    xmlns:viewModels1="clr-namespace:UI.Avalonia.ViewModels"
    xmlns:lib="clr-namespace:UI.Avalonia.Lib"
    Title="Grids UI"
    Width="720"
    Height="480"
    MinWidth="720"
    MinHeight="480"
    x:DataType="viewModels1:MainWindowViewModel"
    CanResize="True"
    Icon="/Assets/avalonia-logo.ico"
    SizeToContent="Manual"
    mc:Ignorable="d">

    <Design.DataContext>
        <viewModels1:MainWindowViewModel />
    </Design.DataContext>

    <DockPanel>
        <Panel
            Name="PanelView"
            Background="Black">
            <lib:BlazorWebView
                Name="WebView"
                HostPage="index.html"
                Services="{DynamicResource services}">
                <lib:BlazorWebView.WrappedRootComponents>
                    <lib:WrappedRootComponent Selector="#app" ComponentType="{x:Type blazor:App}" />
                </lib:BlazorWebView.WrappedRootComponents>
            </lib:BlazorWebView>
        </Panel>
    </DockPanel>
</Window>