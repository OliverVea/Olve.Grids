<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <Title>Olve.Grids</Title>
        <Authors>Oliver Vea</Authors>
        <Description>Setting up a TileAtlas for generating tile-based art</Description>
        <Copyright>Oliver Vea</Copyright>
        <PackageProjectUrl>https://github.com/OliverVea/Olve.Grids/tree/master/src/Olve.Grids</PackageProjectUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <RepositoryUrl>https://github.com/OliverVea/Olve.Grids</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
        <IsTrimmable>true</IsTrimmable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
    </PropertyGroup>

    <Target Name="GenerateVersionInfo" BeforeTargets="BeforeCompile">
        <WriteLinesToFile
            File="VersionInfo.cs"
            Lines="// This file is automatically generated in the Olve.Grids.csproj file.%0A%0Anamespace Olve.Grids%3B%0A%0Apublic static class VersionInfo%0A{%0A    public const string AppVersion = &quot;$(PackageVersion)&quot;%3B%0A}"
            Overwrite="true"/>
    </Target>

    <PropertyGroup>
        <NoWarn Label="">CS1591</NoWarn> <!-- Temporarily disable the requirement for XML documentation on public types and members -->
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Olve.Utilities"/>
        <PackageReference Include="StrictId"/>
        <PackageReference Include="OneOf"/>
        <PackageReference Include="OneOf.SourceGenerator"/>
    </ItemGroup>
</Project>
