<div class="@Classes">
</div>

@code {
    [Parameter] public required string Radius { get; set; }

    [Parameter] public ColorString Color { get; set; } = new("transparent");
    [Parameter] public string? Class { get; set; }

    private string Classes => Class is null
        ? TW(Absolute, W(Radius), H(Radius), RoundedFull, Bg(Color))
        : $"{TW(Absolute, W(Radius), H(Radius), RoundedFull, Bg(Color))} {Class}";

}